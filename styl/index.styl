@import "normalize.min.css"
@import "nib"

body
  font-family: 'Merriweather', serif;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.4;
  color: #333333;
  
h1
  font-size: 2.5em;

h1.name
  background-color: rgba(255, 0, 210, 0.77);
  display: inline-block;
  padding: 0.3em .7em;
  color: white;
  font-family: "Helvetica Neue", "Tahoma", sans-serif;
  text-transform: uppercase;
  letter-spacing: .7px;
  font-weight: 200;
  font-size: 1.2em;
  margin: 2em 0;
  

.project 
  border-bottom: 1px solid #dadada;
  padding: 3em 0.5em;

  & h1
    font-size: 0.85em;
    font-family: Helvetica, Tahoma, sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.7px;
    border-bottom: 1px solid #b9b9b9;
    display: inline-block;
    padding-bottom: 1em;
  
  & b
    letter-spacing: 0.3px;
    font-size: 0.8em;
    
b
  font-family: Helvetica, Tahoma, sans-serif;
  text-transform: uppercase;
    
a
  font-size: 0.7em;
  font-family: Helvetica, Tahoma, sans-serif;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  text-decoration: none;
  color: #70FF46;
  padding: 0 0.2em;
  margin-left: -0.1em;
  position: relative;
  &:hover
    color: white;
    transition: all 300ms;
    background-color: #70FF46;
  &:hover:after
    content: "\2192"

.links
  padding: 2em 0.5em 1em;